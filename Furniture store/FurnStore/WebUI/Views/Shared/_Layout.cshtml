<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Styles/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Styles/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Styles/Content/Errors.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.9.1.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap.js" type="text/javascript"></script>
    <title>@ViewBag.Title</title>
    <style>
        #categories {
            margin-left: 25px;
        }
    </style>
</head>
<body>
    @Html.Partial("Header")

    <div class="visible-xs">
        @Html.Action("Menu", "Nav", new { horizontalNav = true })
    </div>


    <div class="row panel">
        <div id="categories" class="col-xs-3 hidden-xs">
            @Html.Action("Menu", "Nav")
        </div>
        <div class="col-xs-12 col-sm-8">
            @RenderBody()
        </div>
    </div>

</body>
</html>